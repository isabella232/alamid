"use strict";

var pageRegistry = require("<%= rootPath %>/node_modules/alamid/lib/client/registries/pageRegistry.js"),
Page = require("<%= rootPath %>/node_modules/alamid/lib/client/Page.class.js");

<%
var templatePath,
classPath,
dataLoaderPath;
%>

var pageBundle,
pageDataLoader;

<% _(pages).each(function eachPage(page, pageURL)  {
templatePath = page.template;
classPath = page.Class;
dataLoaderPath = page.dataLoader;

if (classPath) { %>
pageBundle = require("bundle?lazy!<%= classPath %>");
<% } else { %>
pageBundle = require("bundle?lazy!raw!<%= templatePath %>");
<% }

if (dataLoaderPath) { %>
pageDataLoader = require("<%= dataLoaderPath %>");
<% } %>
pageRegistry.setPage("<%= pageURL %>", pageBundle, pageDataLoader);

<% }); %>
